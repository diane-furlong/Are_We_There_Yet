<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<!-- Navbar-->
<header class="header">
    <nav class="navbar navbar-expand-lg fixed-top py-3">
        <div class="container"><a href="/" class="navbar-brand">Are We There Yet?</a>
            <button type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler navbar-toggler-right"><i class="fa fa-bars"></i></button>
            
            <div id="navbarSupportedContent" class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a href="/logout" class="nav-link">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<container class="myTripsTop row">
  <div class="col-12">
    <h2>My Trips</h2>
  </div>
  {{#each trips as |trip|}}
    <div class="col-6">
      <div class="card-body tripCard">
        <h3 class="card-title">
          {{trip.trip_name}}
        </h3>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Attendees: {{trip.attendees}}</li>
          <li class="list-group-item">Trip Information: {{trip.trip_info}}</li> 
        </ul>
        <button type="submit" class="btn viewTripBtn" data-id={{trip.id}}>View Trip</button>
      </div>
    </div>
  {{/each}}
</container>

<container class="row">
  <div class="col-12" id="newTripBtnDiv">
    <button type="submit" class="btn btn-success" id="newTripBtn">Create a New Trip!</button>
  </div>
</container>


<script type="text/javascript" src="/js/members.js"></script>