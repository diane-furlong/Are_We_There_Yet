  <ul>
  {{#each posts}}
  <li>
    <p><span class="label">ID:</span> {{this.id}}</p>
    <p><span class="label">Body:</span> {{this.body}}</p>
    <p><span class="label">People_id:</span> {{this.people_id}}</p>

    <button data-id="{{this.id}}" class="delquote">Delete</button>

    <a href="/{{this.id}}">Update this quote</a>
  </li>
  {{/each}}
</ul>

<h2>Make a New Trip</h2>

<form id="create-form">

  <div class="form-group">
    <label for="auth">People_id:</label>
    <input type="text" id="auth" name="author">
  </div>

  <div class="form-group">
    <label for="quo">Body:</label>
    <textarea id="quo" name="quote" rows="8" cols="40"></textarea>
  </div>

  <button type="submit">Add Trip</button>
</form>
