  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>My Trips <span class="member-name"></span></h2>
      </div>
    </div>
  </div>
  <ul>
  {{#each posts}}
  <li>
    <p><span class="label">ID:</span> {{this.id}}</p>
    <p><span class="label">Body:</span> {{this.body}}</p>
    <p><span class="label">People_id:</span> {{this.people_id}}</p>

    <button data-id="{{this.id}}" class="delquote">Delete</button>

    <a href="/{{this.id}}">Update this quote</a>
  </li>
  {{/each}}
</ul>

<h2>Make a New Trip</h2>

<form id="create-form">

  <div class="form-group">
    <label for="auth">People_id:</label>
    <input type="text" id="auth" name="author">
  </div>

  <div class="form-group">
    <label for="quo">Body:</label>
    <textarea id="quo" name="quote" rows="8" cols="40"></textarea>
  </div>

{{#Each}}
  <div class="card" style="width: 18rem;">
    <div class="card-header">
      Trip Location{{data.trips.trip_name}}
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">{{data.people.name}}Who is going</li>
      <li class="list-group-item">Starting Location</li>
      <li class="list-group-item">Activites</li>
      <li class="list-group-item">Ending location</li>
    </ul>
  </div>
  {{/Each}}


  <div class="btn-group" role="group" aria-label="Basic mixed styles example">
    <button type="button" class="btn btn-info">Create a Trip</button>
    <button type="button" class="btn btn-success">View My Trips</button>
  </div>


</form>
