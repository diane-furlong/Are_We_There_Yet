<!-- Navbar-->
<header class="header">
    <nav class="navbar navbar-expand-lg fixed-top py-3">
        <div class="container"><a href="/" class="navbar-brand">Are We There Yet?</a>
            <button type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler navbar-toggler-right"><i class="fa fa-bars"></i></button>
            
            <div id="navbarSupportedContent" class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a href="/logout" class="nav-link">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<body class="background2">
<div class="card tripPageCard">
    <div class="card-header">
        <h1 class="display-box d-block">{{trip_name}}</h1>
        <input id="tripNameEdit" class="edit-box d-none" type="text" value={{trip_name}}>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item display-box d-block">Attendees: {{attendees}}</li>
        <input id="tripAttendeesEdit" class="edit-box d-none" type="text" value={{attendees}}>
        <li class="list-group-item display-box d-block">Trip Information: {{trip_info}}</li>
        <input id="tripInfoEdit" class="edit-box d-none" type="text" value={{trip_info}}>

        <button type="submit" class="btn btn-primary saveEditBtn edit-box d-none" data-id={{id}} id="saveEditBtn">Save Changes</button>

    </ul>
</div>

<container class="row1">
    <div class="col-xs-4 text-left">
        <button type="submit" class="btn btn-primary allTripBtn" id="back2TripsBtn">Back to All Trips</button>
        </div>
        
         <div class="col-xs-4 text-center">
        <button type="submit" class="btn btn-primary editTripBtn" id="editTripBtn">Edit Trip</button>
        </div>
        
    <div class="col-xs-4 text-right">
        <button class="btn btn-danger deleteBtn" data-id={{id}}>Delete Trip</button>
    </div>
</container>
</body>
